{
  "name": "apiquest",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "resolutions": {
    "@apiquest/types": "portal:../fracture/packages/types",
    "@apiquest/fracture": "portal:../fracture/packages/fracture"
  },
  "scripts": {
    "build": "yarn workspace @apiquest/plugin-ui-types build && yarn workspaces foreach -A --include '@apiquest/plugin-*' run build",
    "build:desktop": "yarn workspace @apiquest/desktop build",
    "build:plugins": "yarn workspaces foreach -A --include '@apiquest/plugin-*' run build",
    "clean": "rm -rf packages/*/dist packages/*/node_modules node_modules",
    "test": "yarn workspace @apiquest/desktop test",
    "test:desktop": "yarn workspace @apiquest/desktop test",
    "test:coverage": "yarn workspace @apiquest/desktop test -- --coverage",
    "test:watch": "yarn workspace @apiquest/desktop test -- --watch",
    "lint": "eslint packages/*/src packages/*/tests --ext .ts,.tsx",
    "lint:fix": "eslint packages/*/src packages/*/tests --ext .ts,.tsx --fix",
    "typecheck": "yarn workspaces foreach -A run typecheck"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "eslint": "^9.39.2",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.1.0",
    "typescript": "^5.3.3"
  },
  "packageManager": "yarn@4.12.0"
}
